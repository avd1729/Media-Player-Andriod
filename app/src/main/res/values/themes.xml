<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Assignment4" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryVariant">#085750</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">#105F57</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">#009688</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Default font family -->
        <item name="android:fontFamily">@font/averia_gruesa_libre</item>
        <item name="fontFamily">@font/averia_gruesa_libre</item>

        <!-- Customize your theme here -->
        <item name="android:textViewStyle">@style/MediaAppTextViewStyle</item>
        <item name="buttonStyle">@style/MediaAppButtonStyle</item>
        <item name="tabStyle">@style/MediaAppTabStyle</item>
        <item name="seekBarStyle">@style/MediaAppSeekBarStyle</item>
        <item name="switchStyle">@style/MediaAppSwitchStyle</item>
        <item name="cardViewStyle">@style/MediaAppCardViewStyle</item>
        <item name="bottomNavigationStyle">@style/MediaAppBottomNavigationStyle</item>
        <item name="floatingActionButtonStyle">@style/MediaAppFabStyle</item>
    </style>

    <!-- Text styles -->
    <style name="MediaAppTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/averia_gruesa_libre</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="MediaAppHeadingStyle" parent="MediaAppTextViewStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#033A35</item>
    </style>

    <style name="MediaAppSubheadingStyle" parent="MediaAppTextViewStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#033A35</item>
    </style>

    <!-- Button styles -->
    <style name="MediaAppButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/averia_gruesa_libre</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/button_background_selector</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MediaAppOutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/averia_gruesa_libre</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="strokeColor">@color/purple_500</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Tab styles -->
    <style name="MediaAppTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">#075F57</item>
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="tabTextColor">@color/white_70</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/MediaAppTabTextAppearance</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
    </style>

    <style name="MediaAppTabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/averia_gruesa_libre</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- SeekBar styles -->
    <style name="MediaAppSeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/purple_500</item>
        <item name="android:thumbTint">#040404</item>
        <item name="android:progressBackgroundTint">@color/light_gray</item>
    </style>

    <!-- Switch style -->
    <style name="MediaAppSwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_selector</item>
        <item name="trackTint">@color/switch_track_selector</item>
    </style>

    <!-- Card View style -->
    <style name="MediaAppCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Bottom Navigation style -->
    <style name="MediaAppBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/purple_700</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemTextAppearanceActive">@style/MediaAppBottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/MediaAppBottomNavText</item>
    </style>

    <style name="MediaAppBottomNavText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/averia_gruesa_libre</item>
        <item name="fontFamily">@font/averia_gruesa_libre</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- FAB style -->
    <style name="MediaAppFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/black</item>
        <item name="tint">@color/white</item>
        <item name="maxImageSize">24dp</item>
    </style>
</resources>